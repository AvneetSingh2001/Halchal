<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.avicodes.halchalin.presentation.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_codeAuthFragment"
            app:destination="@id/codeAuthFragment" />
        <action
            android:id="@+id/action_authFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/codeAuthFragment"
        android:name="com.avicodes.halchalin.presentation.ui.auth.CodeAuthFragment"
        android:label="fragment_code_auth"
        tools:layout="@layout/fragment_code_auth" >
        <action
            android:id="@+id/action_codeAuthFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:popUpTo="@id/codeAuthFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="phone"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.avicodes.halchalin.presentation.ui.auth.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="phone"
            app:argType="string" />
    </fragment>
</navigation>