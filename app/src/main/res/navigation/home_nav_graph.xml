<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/newsVpFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.explore.NewsVpFragment"
        android:label="fragment_news_vp"
        tools:layout="@layout/fragment_news_vp" >
        <action
            android:id="@+id/action_newsVpFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
        <action
            android:id="@+id/action_newsVpFragment_to_descFragment"
            app:destination="@id/descFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.reports.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/adsFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.ads.AdsFragment"
        android:label="fragment_ads"
        tools:layout="@layout/fragment_ads" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true"
            app:popUpTo="@id/mainActivity"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_settingsFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.avicodes.halchalin.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <dialog
        android:id="@+id/commentFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.explore.CommentFragment"
        android:label="fragment_comment"
        tools:layout="@layout/fragment_comment" >
        <argument
            android:name="news"
            app:argType="com.avicodes.halchalin.data.models.News" />
        <action
            android:id="@+id/action_commentFragment_to_userProfileFragment2"
            app:destination="@id/userProfileFragment" />
    </dialog>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.settings.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" />
    <dialog
        android:id="@+id/descFragment"
        android:name="com.avicodes.halchalin.presentation.ui.home.explore.DescFragment"
        android:label="fragment_desc"
        tools:layout="@layout/fragment_desc" >
        <argument
            android:name="desc"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/userProfileFragment"
        android:name="com.avicodes.halchalin.presentation.ui.profile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <argument
            android:name="user"
            app:argType="com.avicodes.halchalin.data.models.User" />
    </dialog>
</navigation>