<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/ivNews"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
                android:id="@+id/tvPubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ivNews"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="14sp"
                android:textColor="@color/mainRed"
                android:text="News Published Date"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/tvHeadline"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvPubDate"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_marginHorizontal="10dp"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeadline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@id/tvCollExp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/tvDescContent"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvHeadline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/roboto_regular"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@id/tvCollExp"
                android:visibility="gone"
                android:layout_marginHorizontal="10dp"
                android:text="headline"
                />

            <TextView
                android:id="@+id/tvCollExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/mainBlue"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginHorizontal="10dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:textColor="@color/mainBlue"
                android:text="Source: Halchal.in"
                android:layout_marginHorizontal="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>