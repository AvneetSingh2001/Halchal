<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.home.settings.PrefFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:text="Notification"
        android:id="@+id/tv0"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv0"
            android:layout_marginLeft="20dp"
            android:text="Get notification whenever a there is a \nnews update in your area."
            android:id="@+id/tv1"
            android:textSize="12sp"
            />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv0"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            android:enabled="true"
            android:checked="true"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/v0"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            android:background="@color/mainGrey"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/v0"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="20dp"
            android:text="App's Language"
            android:id="@+id/tv3"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv4"
            android:text="Choose the app's language"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintBottom_toBottomOf="@id/tv4"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/language_trans"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/v1"
            app:layout_constraintTop_toBottomOf="@id/tv4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            android:background="@color/mainGrey"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>