<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/commentorIv"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tvTime"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/commentorIv"
        android:id="@+id/commentorName"
        android:layout_marginLeft="10dp"
        android:text="Avneet Singh"
        android:textSize="10sp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        />

    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/commentorName"
        android:id="@+id/tvTime"
        android:layout_marginLeft="5dp"
        android:text="1 min ago"
        android:textSize="7sp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/commentorName"
        />

    <TextView
        android:layout_width="0dp"
        android:textSize="9sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:id="@+id/commentBody"
        app:layout_constraintTop_toBottomOf="@id/commentorName"
        app:layout_constraintLeft_toRightOf="@id/commentorIv"
        app:layout_constraintRight_toRightOf="parent"
        android:text="reply"
        />

</androidx.constraintlayout.widget.ConstraintLayout>