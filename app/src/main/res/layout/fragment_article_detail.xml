<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.home.ads.ArticleDetailFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/circle_button"
            android:padding="6dp"
            android:src="@drawable/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="4dp"
            android:id="@+id/cvDate"
            android:background="@drawable/red_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            >

            <ImageView
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/clock_blue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/like"
                app:layout_constraintBottom_toBottomOf="@id/like"
                app:layout_constraintRight_toRightOf="parent"
                android:text="4 hrs ago"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintLeft_toRightOf="@id/like"
                android:id="@+id/tvDate"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/circle_shape"
            android:layout_margin="20dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/clUser"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@id/ivUser"
            app:layout_constraintBottom_toBottomOf="@id/ivUser"
            app:layout_constraintLeft_toRightOf="@id/ivUser">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            android:layout_marginHorizontal="20dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Avneet Singh"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/tvUserBio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:text="Avneet Singh"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:maxLines="2"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/tvArticleTitle"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ivUser"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="title"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/cvArticle"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvArticleTitle"
            >

            <ImageView
                android:id="@+id/ivArticle"
                android:layout_width="match_parent"
                android:layout_height="220dp"

                android:scaleType="centerCrop"
                android:foreground="@drawable/red_gradient"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />





            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/btnShare"
                android:layout_margin="20dp"
                android:background="@drawable/btn_bg_light"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:lottie_rawRes="@raw/share_animation"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    android:id="@+id/icShare"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/share"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="4dp"
            android:id="@+id/cvTag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cvDate"
            android:layout_gravity="bottom"
            android:background="@drawable/outline"
            android:layout_margin="20dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintRight_toRightOf="parent"
                android:text="Tag"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginVertical="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/tvTag"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tvArticleDesc"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/cvArticle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Description"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>







</ScrollView>